generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        BigInt      @id
  name      String
  type      String?
  level     Int?
  updatedAt DateTime    @updatedAt @db.Timestamptz(0)
  ItemPrice ItemPrice[]

  @@index([name])
}

model Server {
  id        Int         @id
  name      String      @unique
  slug      String      @unique
  ItemPrice ItemPrice[]
}

model ItemPrice {
  price        BigInt
  quantity     Int      @default(1)
  sourceClient String? // e.g. "desktop", "web"
  observedAt   DateTime @default(now()) @db.Timestamptz(0)
  itemId       BigInt
  serverId     Int

  item   Item   @relation(fields: [itemId], references: [id])
  server Server @relation(fields: [serverId], references: [id])

  @@id([itemId, observedAt]) // Multiple primary key with the "time" dimension to use TimeScaleDB's hypertable.
  @@index([itemId, serverId, observedAt], name: "po_item_server_time_desc")
  @@index([observedAt], type: Brin)
}

view ItemMetrics {
  bucket    DateTime
  itemId    BigInt
  serverId  BigInt
  max_price Float
  min_price Float
  avg_price Float
}
